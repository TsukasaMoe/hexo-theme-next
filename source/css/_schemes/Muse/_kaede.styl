// header
.headband {
  width: 0%;
}

.header {
  margin-bottom: 25px;
  background-image:
  url("/images/banner-02.jpg");
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.header-inner {
  padding: 80px 0 20px;
}

.brand {
  background: rgba(0,0,0,0.3);
  border-radius: 2px;
}

.site-subtitle {
  display: none;
}

.menu .menu-item a {
  color: #FFFFFF;
}
.menu .menu-item a:hover {
  border-bottom: 1px solid #FFFFFF;
}


// post
.post-more-link .btn {
  border-radius: 2px;
  background: #757575;
  border-color: #757575;
}


// float
.sidebar-toggle {
  border-radius: 2px;
  background: #757575;
}

.back-to-top {
  border-radius: 2px;
  background: #757575;
}


// other
embed {
   width: 100%;
   display: block;
   margin:  0px auto 25px auto;
}


// media
@media (max-width: 767px) {
  .header-inner {
    padding: 80px 0 70px;
  }

  .menu .menu-item a {
    color: #222222;
  }
  .menu .menu-item a:hover {
    border-bottom: 1px solid #222222;
  }

}
